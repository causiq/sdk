{
  "name": "logary-project",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "lerna bootstrap && lerna link && lerna run build --stream",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:browser": "rollup -c",
    "publish": "lerna run publish",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "docs": "typedoc --name 'Logary JS' --out docs --target es6 --theme minimal --mode modules src --exclude 'tests/**/*'",
    "lint": "eslint --ext .ts,.tsx packages/**"
  },
  "bugs": {
    "url": "https://github.com/logary/logary-js/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint"
    }
  },
  "devDependencies": {
    "@opentelemetry/node": "^0.11.0",
    "@opentelemetry/plugin-document-load": "^0.10.0",
    "@opentelemetry/plugin-http": "^0.11.0",
    "@opentelemetry/plugin-https": "^0.11.0",
    "@opentelemetry/web": "^0.11.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "rollup": "^1.0.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-git-version": "^0.3.1",
    "tslib": "^1.9.3",
    "typescript": "^4.0.2"
  }
}

{
  "name": "logary-project",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "lerna bootstrap && lerna link && lerna run build --stream --parallel",
    "test": "yarn workspaces foreach run test",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "docs": "typedoc --name 'Logary JS' --out docs --target es6 --theme minimal --mode modules src --exclude 'tests/**/*'",
    "lint": "eslint --ext .ts,.tsx packages/**"
  },
  "bugs": {
    "url": "https://github.com/logary/logary-js/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint"
    }
  },
  "devDependencies": {
    "@opentelemetry/context-zone": "^0.10.2",
    "@opentelemetry/node": "^0.10.2",
    "@opentelemetry/plugin-document-load": "^0.9.0",
    "@opentelemetry/plugin-http": "^0.10.2",
    "@opentelemetry/plugin-https": "^0.10.2",
    "@opentelemetry/web": "^0.10.2",
    "@typescript-eslint/eslint-plugin": "^3.0.1",
    "@typescript-eslint/parser": "^3.0.1",
    "eslint": "^7.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.22.1",
    "typescript": "^4.0.2"
  }
}
